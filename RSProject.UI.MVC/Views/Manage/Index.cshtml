@model RSProject.UI.MVC.Models.IndexViewModel
@{
    ViewBag.Title = "Manage your account";
}



<header class="myMasthead">
    <section class="page-section" id="">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase mt-5">@ViewBag.Title</h2>
                <h3 class="section-subheading text-muted">@ViewBag.StatusMessage</h3>


                <br />
                <p class="myLinkTwo">
                    @(Model.HasPassword ? Html.ActionLink("Change your password", "ChangePassword")
                                                                                                                        : Html.ActionLink("Pick a password", "SetPassword"))
                </p>
            </div>

        </div>
        @*Phone Number: @Html.DisplayFor(m => m.Phone)*@
