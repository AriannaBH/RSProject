@model RSProject.Data.EF.CustomerAsset

@{
    ViewBag.Title = "Edit";
}


<header class="myMasthead">
    <section class="page-section">
        <div class="container">
            @using (Html.BeginForm("Edit", "CustomerAssets", FormMethod.Post, new { @enctype = "multipart/form-data"}))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase mt-5">@ViewBag.Title</h2>
                    <h3 class="section-subheading text-muted">Customer Asset</h3>
                    <br />
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CustomerAssetID)
                @Html.HiddenFor(model => model.AssetPhoto)

                <div class="form-group">
                    @Html.LabelFor(model => model.AssetName, htmlAttributes: new { @class = "control-label col-md-2 offset-1 myBody" })
                    <div class="col-md-10 offset-1">
                        @Html.EditorFor(model => model.AssetName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AssetName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.OwnerID, "Coach Name", htmlAttributes: new { @class = "control-label col-md-2 offset-1 myBody" })
                    <div class="col-md-10 offset-1">
                        @Html.DropDownList("OwnerID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.OwnerID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AssetPhoto, htmlAttributes: new { @class = "control-label col-md-2 offset-1 myBody" })
                    <div class="col-md-10 offset-1 myBody">
                        <p>
                            <img src="~/Content/CustomerAssets/@Model.AssetPhoto" alt="@Model.AssetName" class="img-responsive img-thumbnail" />
                        </p>
                        <p>
                            <label>Change Photo:</label><br />
                            <input type="file" name="assetPhoto" />
                        </p>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SpecialNotes, htmlAttributes: new { @class = "control-label col-md-2 offset-1 myBody" })
                    <div class="col-md-10 offset-1">
                        @Html.EditorFor(model => model.SpecialNotes, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SpecialNotes, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2 offset-1 myBody" })
                    <div class="col-md-10 offset-1">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.IsActive)
                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DateAdded, htmlAttributes: new { @class = "control-label col-md-2 offset-1 myBody" })
                    <div class="col-md-10 offset-1">
                        @Html.EditorFor(model => model.DateAdded, new { htmlAttributes = new { @class = "form-control", @id = "joinedDate" } })
                        @Html.ValidationMessageFor(model => model.DateAdded, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 offset-1 text-center">
                        <input type="submit" value="Save" class="btn btn-primary btn-xl text-uppercase" />
                    </div>
                </div>
            </div>
            }

            <div class="myLinkTwo offset-1">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </section>
</header>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $("#joinedDate").datepicker({
                dateFormat: "mm/dd/yy"
            });


        });
    </script>
}
