@model RSProject.UI.MVC.Models.RoleViewModel

@{
    ViewBag.Title = "Create";
}

<header class="myMasthead">
    <section class="page-section">
        <div class="container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="text-center">
                        <h2 class="section-heading text-uppercase mt-5">@ViewBag.Title</h2>
                        <h3 class="section-subheading text-muted">New Role</h3>
                        <br />
                    </div>
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2 offset-1 myBody" })
                        <div class="col-md-10 offset-1">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10 offset-1 text-center">
                            <input type="submit" value="Create" class="btn btn-primary btn-xl text-uppercase" />
                        </div>
                    </div>
                </div>
            }

            <div class="myLinkTwo offset-1">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </section>
</header>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
