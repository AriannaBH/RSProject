@model RSProject.Data.EF.Reservation

@{

    ViewBag.Title = "Create";
}

<header class="myMasthead">
    <section class="page-section">
        <div class="container">
            @if(ViewBag.LimitFull != null)
            {
                <h2 class="section-heading text-uppercase mt-5 text-danger">
                    @ViewBag.LimitFull
                </h2>
            }

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="text-center">
                        <h2 class="section-heading text-uppercase mt-5">@ViewBag.Title</h2>
                        <h3 class="section-subheading text-muted">Reservation</h3>
                        <br />
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.CustomerAssetID, "Team Name", htmlAttributes: new { @class = "control-label col-md-2 offset-1 myBody" })
                        <div class="col-md-10 offset-1">
                            @Html.DropDownList("CustomerAssetID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CustomerAssetID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LocationID, "Location", htmlAttributes: new { @class = "control-label col-md-2 offset-1 myBody" })
                        <div class="col-md-10 offset-1">
                            @Html.DropDownList("LocationID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LocationID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ServiceID, "Service", htmlAttributes: new { @class = "control-label col-md-2 offset-1 myBody" })
                        <div class="col-md-10 offset-1">
                            @Html.DropDownList("ServiceID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ServiceID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ReservationDate, htmlAttributes: new { @class = "control-label col-md-2 offset-1 myBody" })
                        <div class="col-md-10 offset-1">
                            @Html.EditorFor(model => model.ReservationDate, new { htmlAttributes = new { @class = "form-control", @id = "reservedDate", @autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.ReservationDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                    @Html.LabelFor(model => model.ReservationTime, "Reservation Time", htmlAttributes: new { @class = "control-label col-md-2 offset-1 myBody" })
                    <div class="col-md-10 offset-1">
                        @Html.EditorFor(model => model.ReservationTime, new { htmlAttributes = new { @class = "form-control timePicker", @autocomplete = "off", @type = "text" } })
                        @Html.ValidationMessageFor(model => model.ReservationTime, "", new { @class = "text-danger" })
                    </div>
                </div>

                    <div class="form-group">
                        <div class="col-md-10 offset-1 text-center">
                            <input type="submit" value="Create" class="btn btn-primary btn-xl text-uppercase" />
                        </div>
                    </div>
                </div>
            }

            <div class="myLinkTwo offset-1">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </section>
</header>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <script>
        $(function () {
            $("#reservedDate").datepicker({
                dateFormat: "mm/dd/yy"
            });

            $('.timePicker').timepicker({
                timeFormat: 'h:mm p',
                interval: 60,
                minTime: '10',
                maxTime: '6:00pm',
                defaultTime: '11',
                startTime: '10:00',
                dynamic: false,
                dropdown: true,
                scrollbar: true
            });
        });
    </script>
}