@model RSProject.UI.MVC.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit";
}

<header class="myMasthead">
    <section class="page-section">
        <div class="container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="text-center">
                        <h2 class="section-heading text-uppercase mt-5">@ViewBag.Title</h2>
                        <h3 class="section-subheading text-muted">User</h3>
                        <br />
                    </div>
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2 offset-1 myBody" })
                        <div class="col-md-10 offset-1">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label offset-1 myBody">
                            Roles
                        </label>
                        <div class="col-md-10 offset-1">
                            @foreach (var item in Model.RolesList)
                            {
                                <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                                @Html.Label(item.Value, new { @class = "control-label myBody" })
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10 offset-1 text-center">
                            <input type="submit" value="Save" class="btn btn-primary btn-xl text-uppercase" />
                        </div>
                    </div>
                </div>
            }

            <div class="myLinkTwo offset-1">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </section>
</header>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
